<resources>
    <!-- Main Colors -->
    <color name="primaryColor">?android:attr/colorPrimary</color> <!-- Settings white -->
    <color name="primaryColorDark">?android:attr/colorPrimaryDark</color> <!-- Light grey -->
    <color name="accentColor">@*android:color/accent_device_default_light</color> <!-- System accent -->
    <color name="accentColorDark">@*android:color/accent_device_default_dark</color> <!-- System dark accent -->
    <color name="ic_launcher_background">#FF226D</color> <!-- Launcher icon background -->

    <!-- Text Colors -->
    <color name="textColor">?android:attr/textColorPrimary</color> <!-- Black text color -->
    <color name="drawer_header_text_color">@color/textColor</color> <!-- Drawer header text color -->
    <color name="drawer_menu_text_checked_color">@color/accentColor</color> <!-- Drawer menu active selection text color -->
    <color name="drawer_menu_text_normal_color">@color/textColor</color> <!-- Drawer menu inactive selection text color -->
    <color name="drawer_text_color">@color/textColor</color> <!-- Drawer menu options text color -->
    <color name="eq_textColor">@color/textColor</color> <!-- Equalizer side text color  (-15 0 +15 color) -->
    <color name="highlight_gallery_text">@color/accentColor</color> <!-- Active preset color -->
    <color name="lowlight_gallery_text">@color/accentColorDark</color> <!-- Inactive preset color -->

    <!--Background Colors-->
    <color name="drawer_background_color">?android:attr/colorBackground</color> <!-- Drawer menu background color-->
    <color name="eq_area_background">?android:attr/colorBackground</color> <!-- Backround of the equalizer -->
    <color name="gallery_bg_color">?android:attr/colorBackground</color> <!-- Background of the bar under presets -->
    <color name="knobs_area_background">?android:attr/colorBackground</color> <!-- Background around knobs and background next to eq_background -->
    <color name="mainBackgroundColor">?android:attr/colorBackground</color> <!-- Background color for the rest of the background remaining -->
    <color name="spinner_bg_color">?android:attr/colorBackgroundFloating</color> <!-- Background color of the spinner menu -->

    <!--Current Colors-->
    <color name="current_out_source">@color/primaryColorDark</color> <!-- Current Out bar color -->
    <color name="current_out_source_color">?android:attr/textColorTertiary</color> <!-- Text color on Current Out bar -->
    <color name="knob_current_level">@color/accentColor</color> <!-- Knob current percentage and its enabled state -->

    <!-- Disabled Colors-->
    <color name="disabled">?android:attr/textColorPrimaryDisabled</color> <!-- General disabled color -->
    <color name="disabled_gallery_text">@color/disabled</color> <!-- Preset text color when disabled -->
    <color name="knob_disabled">@color/disabled</color> <!-- Knobs level when musicfx is disabled -->
    <color name="spinner_disabled">#76777c</color> <!-- Spinner color when set to none or musicfx is disabled -->
    <color name="visualizer_disabled">@color/disabled</color> <!-- Equalizer level bar when musicfx is disable -->

    <!-- Drawer Colors -->
    <color name="drawer_header_color">@color/primaryColor</color> <!-- Drawer header background color -->
    <color name="drawer_menu_icon_checked_color">@color/accentColor</color> <!-- Drawer menu active selection icon color -->
    <color name="drawer_menu_icon_normal_color">@color/textColor</color> <!-- Drawer menu inactive selection icon color -->

    <!-- Spinner Colors-->
    <color name="spinner_txt_area_color">?android:attr/colorBackground</color> <!-- "Reverb" text area plus a small part at right of the spinner box -->
    <color name="spinner_reverb_list">?android:attr/colorBackgroundFloating</color> <!-- Available "reverb" effects list background color-->

    <!-- Switch Colors-->
    <color name="switch_enabled">@color/accentColor</color> <!-- Switch color when musicfx is enabled -->
    <color name="switch_disabled">#e01a3f</color> <!-- Switch color when musicfx is disabled -->

    <!-- Visualizer Colors-->
    <color name="visualizer_highlight">@color/accentColor</color> <!-- Equalizer active level bar top element -->
    <color name="visualizer_lowlight">@color/accentColorDark</color> <!-- Equalizer active level bar elements -->
</resources>
